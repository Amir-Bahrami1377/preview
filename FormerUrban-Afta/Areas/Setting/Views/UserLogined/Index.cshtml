@model List<UserLoginedDto>
@{
    Layout = "_Layout";
}

<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <p class="fw-semibold fs-18 mb-0">مدیریت نرم افزار</p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item pointer">
                    <a asp-area="" asp-controller="Home" asp-action="Index">کارتابل</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">لاگین های کاربران</li>
            </ol>
        </nav>

    </div>
</div>

<input type="hidden" id="messages" @* value='@(Model.message != null ? Json.Serialize(Model.message) : "[]")' *@ />
<input type="hidden" id="PageLink" value="UsersLogin" />

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title"> جستجو </div>
            </div>
            <div class="card-body">
                <form class="w-100" method="Post" autocomplete="off" asp-area="Setting" asp-controller="UserLogined" asp-action="Index" id="UserLoginedForm">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="form-group col-3">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm flatpickr-input AmardDate" readonly="readonly" placeholder="تاریخ شروع" name="FromDateTime" id="FromDateTime">
                            </div>
                        </div>
                        <div class="form-group col-3">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm flatpickr-input AmardDate" readonly="readonly" placeholder="تاریخ پایان" name="ToDateTime" id="ToDateTime">
                            </div>
                        </div>

                        <div class="form-group col-3">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm flatpickr-input AmardDate" readonly="readonly" placeholder="تاریخ ورود" name="ArrivalDate" id="ArrivalDate">
                            </div>
                        </div>
                        <div class="form-group col-3">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm flatpickr-input AmardDate" readonly="readonly" placeholder="تاریخ خروج" name="DepartureDate" id="DepartureDate">
                            </div>
                        </div>

                    </div>
                    <div class="row mt-3">

                        <div class="col-3">
                            <input class="form-control form-control-sm" placeholder="نام کاربری" name="UserName" id="UserName" />
                        </div>

                        <div class="col-3">
                            <input class="form-control form-control-sm" placeholder="IP کاربر" name="Ip" id="Ip" />
                        </div>

                        <div class="col-1">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="reportType" id="Login" value="1">
                                <label class="form-check-label" for="Login">ورود</label>
                            </div>
                        </div>

                        <div class="col-1">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="reportType" id="Logout" value="2">
                                <label class="form-check-label" for="Logout">خروج</label>
                            </div>
                        </div>

                        <div class="col-1">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="reportType" id="Failed" value="3">
                                <label class="form-check-label" for="Logout">ناموفق</label>
                            </div>
                        </div>

                        <div class="col-3">
                            <button type="button" class="btn btn-sm btn-danger clearDateBtn">پاک کردن تاریخ</button>
                            <button type="submit" class="btn btn-sm btn-success">جستجو</button>
                            <a type="button" class="btn btn-sm btn-info" asp-area="Setting" asp-controller="UserLogined" asp-action="Index">مشاهده همه</a>
                        </div>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title"> لاگین های کاربران</div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Any())
                    {
                        <table class="table table-bordered table-hover text-wrap align-middle w-100 DataTable">
                            <thead class="table-primary text-center">
                                <tr>
                                    <th>IP</th>
                                    <th>نام و نام خانوادگی</th>
                                    <th>وضعیت</th>
                                    <th>نوع</th>
                                    <th>جزئیات</th>
                                    <th>تاریخ درخواست ورود</th>
                                    <th>تاریخ درخواست خروج</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="@(item.IsValid ? "valid" : "not_valid")">
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.Ip</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.FullName</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.ViewerOrLoginer</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.Method</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.UserAgent</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.LoginDateTimeString</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.LogoutDateTimeString</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert"> موردی برای نمایش وجود ندارد! </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <link href="~/lib/persiandatepicker/persian-datepicker.css" rel="stylesheet" />

    <script src="~/lib/persiandatepicker/persian-date.js"></script>
    <script src="~/lib/persiandatepicker/persian-datepicker.js"></script>

    <script src="~/js/tools/datepeaker.js"></script>

    <link href="~/theme/assets/libs/datatable/datatables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/theme/assets/libs/datatable/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="~/Theme/assets/libs/datatable/jquery.datatables.min.js"></script>
    <script src="~/Theme/assets/libs/datatable/datatables.bootstrap5.min.js"></script>
    <script src="~/Theme/assets/libs/datatable/datatables.responsive.min.js"></script>

    <script src="~/js/areas/setting/userlogined.js"></script>
}
