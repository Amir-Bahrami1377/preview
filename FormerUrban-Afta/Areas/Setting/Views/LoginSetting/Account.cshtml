@using System.Security.Claims
@inject IPermissionService PermissionService

@model List<UserSessionDto>
@{
    Layout = "_Layout";
}

<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <p class="fw-semibold fs-18 mb-0">مدیریت نرم افزار</p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item pointer">
                    <a asp-area="" asp-controller="Home" asp-action="Index">کارتابل</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">مدیریت نشست های کاربر</li>
            </ol>
        </nav>

    </div>
</div>

<input type="hidden" id="messages" @* value='@(Model.message != null ? Json.Serialize(Model.message) : "[]")' *@ />
<input type="hidden" id="PageLink" value="Account" />

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">مدیریت نشست های کاربر</div>
            </div>
            <div class="card-body">
                @{
                    var Reports_DeleteUserSession = await PermissionService.HasPermissionAsync(User.FindFirstValue(ClaimTypes.NameIdentifier), "Reports_DeleteUserSession");

                    <table id="responsiveDataTable" class="table table-bordered table-hover text-wrap align-middle w-100 DataTable">
                        <thead>
                        <tr>
                            <th scope="col" class="gridjs-th-fixed">Ip</th>
                            <th scope="col" class="gridjs-th-fixed">نام کاربر</th>
                            <th scope="col" class="gridjs-th-fixed">زمان ورود</th>
                            <th scope="col" class="gridjs-th-fixed">زمان فعالیت</th>
                            <th scope="col" class="gridjs-th-fixed">زمان اعتبار</th>
                            <th scope="col" class="gridjs-th-fixed">توضیحات</th>
                            @if (Reports_DeleteUserSession)
                            {
                                <th scope="col" class="gridjs-th-fixed">عملیات</th>
                            }
                        </tr>
                        </thead>
                        <tbody class="hover">

                        @foreach (var item in Model)
                        {
                            <tr>
                                <th class="@(item.IsValid ? "valid" : "not_valid")">@item.Ip</th>
                                <th class="@(item.IsValid ? "valid" : "not_valid")">@item.FullName</th>
                                <th class="@(item.IsValid ? "valid" : "not_valid")">@item.CreatedAt</th>
                                <th class="@(item.IsValid ? "valid" : "not_valid")">@item.LastActivity</th>
                                <th class="@(item.IsValid ? "valid" : "not_valid")">@item.ExpiresAt</th>
                                <th class="@(item.IsValid ? "valid" : "not_valid") text-break">@item.UserAgent</th>
                                @if (Reports_DeleteUserSession)
                                {
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">
                                        <div class="hstack gap-2 flex-wrap">

                                            <a class="text-danger fs-20 lh-1 pointer" asp-area="Setting" asp-controller="LoginSetting" asp-action="DeleteAccount" asp-route-id="@item.Identity" title="حذف نشست کاربر">
                                                <i class="ri-delete-bin-6-fill"></i>
                                            </a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <link href="~/theme/assets/libs/datatable/datatables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/theme/assets/libs/datatable/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Theme/assets/libs/datatable/jquery.datatables.min.js"></script>
    <script src="~/Theme/assets/libs/datatable/datatables.bootstrap5.min.js"></script>
    <script src="~/Theme/assets/libs/datatable/datatables.responsive.min.js"></script>
}