@using System.Security.Claims
@inject IPermissionService PermissionService

@model EventLogThresholdDto

@{
    Layout = "_Layout";
}

<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
    <div>
        <p class="fw-semibold fs-18 mb-0">مدیریت نرم افزار</p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item pointer">
                    <a asp-area="" asp-controller="Home" asp-action="Index">کارتابل</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page"> حد آستانه رویداد ها ممیزی </li>
            </ol>
        </nav>
    </div>
</div>

<input type="hidden" id="messages" value='@(Model.message != null ? Json.Serialize(Model.message) : "[]")' />

<div class="row">
    <div class="col-xl-12">
        <div class="card custom-card">
            <div class="card-header">
                <div class="card-title">
                    مدیریت حد آستانه رویداد های ممیزی
                    @if (!Model.IsValid)
                    {
                        <small class="text-danger"> ( داده های غیرمجاز ) </small>
                    }
                </div>
            </div>
            <div class="card-body d-flex align-items-start">

                <form asp-area="Setting" asp-controller="EventLogThreshold" asp-action="Update" method="post" class="w-100" id="EventLogThresholdForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Identity" />

                    <div class="row">
                        <label asp-for="UsersLoginLogWarning" class="col-md-6 col-form-label">حد آستانه‌ی هشدار برای حجم جدول ذخیره‌سازی لاگ ورود/خروج کاربران (مگابایت) :</label>
                        <div class="col-md-2">
                            <input asp-for="UsersLoginLogWarning" class="form-control form-control-sm EventLogThresholdReadOnly @(Model.IsValid ? "valid" : "not_valid")" />
                        </div>
                    </div>

                    <div class="row mt-2">
                        <label asp-for="UsersLoginLogCritical" class="col-md-6 col-form-label">حد آستانه‌ی بحرانی برای حجم جدول ذخیره‌سازی لاگ ورود/خروج کاربران (مگابایت) :</label>
                        <div class="col-md-2">
                            <input asp-for="UsersLoginLogCritical" class="form-control form-control-sm EventLogThresholdReadOnly @(Model.IsValid ? "valid" : "not_valid")" />
                        </div>
                    </div>

                    <div class="row mt-2">
                        <label asp-for="UsersActivityLogWarning" class="col-md-6 col-form-label">حد آستانه‌ی هشدار برای حجم جدول ذخیره‌سازی لاگ فعالیت کاربران (مگابایت) :</label>
                        <div class="col-md-2">
                            <input asp-for="UsersActivityLogWarning" class="form-control form-control-sm EventLogThresholdReadOnly @(Model.IsValid ? "valid" : "not_valid")" />
                        </div>
                    </div>

                    <div class="row mt-2">
                        <label asp-for="UsersActivityLogCritical" class="col-md-6 col-form-label">حد آستانه‌ی بحرانی برای حجم جدول ذخیره‌سازی لاگ فعالیت کاربران (مگابایت) :</label>
                        <div class="col-md-2">
                            <input asp-for="UsersActivityLogCritical" class="form-control form-control-sm EventLogThresholdReadOnly @(Model.IsValid ? "valid" : "not_valid")" />
                        </div>
                    </div>

                    <div class="row mt-2">
                        <label asp-for="UsersAuditsLogWarning" class="col-md-6 col-form-label">حد آستانه‌ی هشدار برای حجم جدول ذخیره‌سازی لاگ تغییرات داده های سیستم (مگابایت) :</label>
                        <div class="col-md-2">
                            <input asp-for="UsersAuditsLogWarning" class="form-control form-control-sm EventLogThresholdReadOnly @(Model.IsValid ? "valid" : "not_valid")" />
                        </div>
                    </div>

                    <div class="row mt-2">
                        <label asp-for="UsersAuditsLogCritical" class="col-md-6 col-form-label">حد آستانه‌ی بحرانی برای حجم جدول ذخیره‌سازی لاگ تغییرات داده های سیستم (مگابایت) :</label>
                        <div class="col-md-2">
                            <input asp-for="UsersAuditsLogCritical" class="form-control form-control-sm EventLogThresholdReadOnly @(Model.IsValid ? "valid" : "not_valid")" />
                        </div>
                    </div>
                    
                    <div class="row mt-2">
                        <label asp-for="UserId" class="col-md-6 col-form-label">ارسال پیامک به کاربر:</label>
                        <div class="col-md-2">
                            <select asp-for="UserId" asp-items="Model.Users" class="form-select form-select-sm EventLogThresholdReadOnly @(Model.IsValid ? "valid" : "not_valid")">
                            </select>
                        </div>
                    </div>

                    <div class="d-flex align-items-center justify-content-center mt-3 col-12">
                        @{
                            var EditSms = await PermissionService.HasPermissionAsync(User.FindFirstValue(ClaimTypes.NameIdentifier), "EventLogThreshold_Edit");
                            if (EditSms)
                            {
                                <a class="btn btn-sm btn-warning mx-1" id="Edit">ویرایش اطلاعات</a>
                                <a class="btn btn-sm btn-danger mx-1" id="Cancel">انصراف</a>
                                <button type="submit" class="btn btn-sm btn-success mx-1" id="Submit">ذخیره اطلاعات</button>
                            }
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/areas/Setting/EventLogThreshold.js"></script>
}