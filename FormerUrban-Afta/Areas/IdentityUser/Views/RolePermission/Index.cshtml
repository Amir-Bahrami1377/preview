@using System.Security.Claims
@inject IPermissionService PermissionService

@model IReadOnlyList<RoleDto>

<div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">

    <div>
        <p class="fw-semibold fs-18 mb-0">سیستم کاربران</p>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item pointer">
                    <a asp-area="" asp-controller="Home" asp-action="Index">کارتابل</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">دسترسی نقش ها</li>
            </ol>
        </nav>
    </div>
</div>

<input type="hidden" id="SelectedRole" />
<div class="row">
    <div class="col-6">
        <div class="card custom-card">
            <div class="card-header justify-content-between">
                <div class="row col-12">
                    <div class="col-6">
                        <input class="form-control form-control-sm form-la" id="RoleSearch" placeholder="جستجو در نقش ها" autocomplete="off" />
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered text-nowrap table-hover " id="RoleTable">
                    <thead class="table-primary">
                        <tr>
                            <th> #</th>
                            <th> نقش</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr class="text-center RoleRow pointer" id="@role.Name">
                                <th class="@(role.IsValid ? "valid" : "not_valid")"> @role.Name </th>
                                <th class="@(role.IsValid ? "valid" : "not_valid")" h> @role.Description </th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-6" id="">
        <div class="card custom-card">
            <div class="card-header justify-content-between">
                <div class="row col-12">
                    <div class="col-6">
                        <input class="form-control form-control-sm form-la" id="TypePermissionSearch" placeholder="جستجو در نوع دسترسی" autocomplete="off" />

                    </div>
                    <div class="col-6 d-flex align-items-end gap-2">
                        @{
                            var EditPermission = await PermissionService.HasPermissionAsync(User.FindFirstValue(ClaimTypes.NameIdentifier), "RolePermission_Eidt");
                            if (EditPermission)
                            {
                                <button class="btn btn-sm btn-success" id="SaveRolePermission">ذخیره اطلاعات</button>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="card-body" id="GetAllPermission">
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/areas/identityuser/RolePermission.js"></script>
}