@model CreateCostumIdentityUserDto

<div class="modal-header">
    <h6 class="modal-title">ایجاد کاربر جدید</h6>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <form method="post" autocomplete="off">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserName" id="oldUserName" />
        <input type="hidden" id="Id" />
        <div class="row">
            <div class="col-6">
                <label class="form-label" asp-for="Name">نام</label>
                <input type="text" class="form-control form-control-sm" asp-for="Name"/>
            </div>
            <div class="col-6">
                <label class="form-label" asp-for="Family">نام خانوادگی</label>
                <input type="text" class="form-control form-control-sm" asp-for="Family"/>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <label class="form-label" asp-for="UserName">نام کاربری</label>
                <input type="text" class="form-control form-control-sm" asp-for="UserName"/>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <label asp-for="PasswordHash" class="form-label">رمز عبور</label>
                <div class="input-group">
                    <input type="password" class="form-control form-control-sm" asp-for="PasswordHash">
                    <button class="btn btn-sm btn-primary d-flex align-items-center" type="button" id="PasswordEyeBtn">
                        <i class="ri-eye-off-line align-middle fs-14" id="PasswordEye"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <div class="progress custom-progress " role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar" id="password-strength-bar"></div>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <label asp-for="RepeatPassword" class="form-label">تکرار رمز عبور</label>
                <div class="input-group">
                    <input type="password" class="form-control form-control-sm" asp-for="RepeatPassword">
                    <button class="btn btn-sm btn-primary d-flex align-items-center" type="button" id="PasswordEyeRepeatBtn">
                        <i class="ri-eye-off-line align-middle fs-14" id="PasswordRepeatEye"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <label class="form-label">نقش کاربر</label>
                <select asp-for="Role" asp-items='@(new SelectList(Model.Roles, "Name", "Description"))' aria-readonly="readonly"
                        class="form-control form-control-sm" multiple="multiple">
                </select>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-6">
                <label class="form-label" asp-for="Email">ایمیل</label>
                <input type="text" class="form-control form-control-sm" asp-for="Email"/>
            </div>
            <div class="col-6">
                <label class="form-label" asp-for="PhoneNumber">شماره همراه</label>
                <input type="text" class="form-control form-control-sm" asp-for="PhoneNumber"/>
            </div>
        </div>
    </form>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">
        بستن
    </button>
    <button type="button" class="btn btn-sm btn-success" id="CreateUserBtnSubmit">
        ایجاد
    </button>
</div>