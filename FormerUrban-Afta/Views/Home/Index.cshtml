@using System.Security.Claims
@inject IPermissionService PermissionService

@model FormerUrban_Afta.DataAccess.DTOs.Darkhast.HomeDto
@{
    var Darkhast_Detaile = await PermissionService.HasPermissionAsync(User.FindFirstValue(ClaimTypes.NameIdentifier), "Darkhast_Detaile");
}

<div id="Kartablecontent">
    <div class="d-md-flex d-block align-items-center justify-content-between my-4 page-header-breadcrumb">
        <div>
            <p class="fw-semibold fs-18 mb-0"> کارتابل </p>
            <span class="fs-semibold text-muted"> کارتابل </span>
        </div>
    </div>
    <input type="hidden" id="message" value="@TempData["LoginMessage"]" />
    <div class="row">
        <div class="col-xl-12">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title"> درخواست های قابل مشاهده در کارتابل شما </div>
                </div>
                <div class="card-body">
                    <table class="table text-nowrap table-bordered table-hover AmardDataTable">
                        <thead>
                        <tr>
                            <th scope="col" class="gridjs-th-fixed">شماره درخواست</th>
                            <th scope="col" class="gridjs-th-fixed">شماره پرونده</th>
                            <th scope="col" class="gridjs-th-fixed">کد نوسازی</th>
                            <th scope="col" class="gridjs-th-fixed">مرحله</th>
                            <th scope="col" class="gridjs-th-fixed">نوع درخواست</th>
                            <th scope="col" class="gridjs-th-fixed">تاریخ درخواست</th>
                            <th scope="col" class="gridjs-th-fixed">نام متقاضی</th>
                            @if (Darkhast_Detaile)
                            {
                                <th scope="col" class="gridjs-th-fixed">عملیات</th>
                            }
                        </tr>
                        </thead>
                        <tbody class="hover">
                        @{
                            foreach (var item in Model.kartable)
                            {
                                <tr class="text-center">
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.sh_darkhast</td>
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.shop</td>
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.code_nosazi</td>
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.marhaleh</td>
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.noedarkhast</td>
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.tarikh_darkhast</td>
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.name_mot</td>
                                    @if (Darkhast_Detaile)
                                    {
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">
                                            <div class="hstack gap-2 flex-wrap">
                                                <form method="post" asp-area="Marahel" asp-controller="@item.ControllerName" asp-action="Index" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="shop" value="@item.shop" />
                                                    <input type="hidden" name="shod" value="@item.sh_darkhast" />
                                                    <input type="hidden" name="codeMarhaleh" value="@item.c_marhaleh" />
                                                    <button type="submit" class="text-info fs-20 lh-1 pointer btn btn-link p-0 m-0" title="مشاهده درخواست">
                                                        <i class="bx bxs-show"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xl-12">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title"> ورود های موفق </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover text-wrap align-middle w-100 DataTable">
                        <thead>
                        <tr>
                            <th>IP</th>
                            <th>نوع</th>
                            <th>جزئیات</th>
                            <th>تاریخ درخواست ورود</th>
                        </tr>
                        </thead>
                        <tbody class="hover">
                        @{
                            foreach (var item in Model.Success)
                            {
                                <tr class="@(item.IsValid ? "valid" : "not_valid")">
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.Ip</td>
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.Method</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid") text-break">@item.UserAgent</td>
                                    <td class="@(item.IsValid ? "valid" : "not_valid")">@item.LoginDateTimeString</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-xl-12">
            <div class="card custom-card">
                <div class="card-header">
                    <div class="card-title"> ورود های ناموفق </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover text-wrap align-middle w-100 DataTable">
                        <thead>
                            <tr>
                                <th>IP</th>
                                <th>نوع</th>
                                <th>جزئیات</th>
                                <th>تاریخ درخواست ورود</th>
                            </tr>
                        </thead>
                        <tbody class="hover">
                            @{
                                foreach (var item in Model.Failed)
                                {
                                    <tr class="@(item.IsValid ? "valid" : "not_valid")">
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.Ip</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.Method</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid") text-break">@item.UserAgent</td>
                                        <td class="@(item.IsValid ? "valid" : "not_valid")">@item.LoginDateTimeString</td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <link href="~/theme/assets/libs/datatable/datatables.bootstrap5.min.css" rel="stylesheet" />
    <link href="~/theme/assets/libs/datatable/responsive.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Theme/assets/libs/datatable/jquery.datatables.min.js"></script>
    <script src="~/Theme/assets/libs/datatable/datatables.bootstrap5.min.js"></script>
    <script src="~/Theme/assets/libs/datatable/datatables.responsive.min.js"></script>
}
