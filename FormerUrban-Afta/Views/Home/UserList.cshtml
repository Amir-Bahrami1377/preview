<h3>Users List</h3>
<hr />
<table class="table table-striped table-bordered">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Family</td>
        <td>User Name</td>
        <td>Email</td>
        <td>
            Actions
        </td>
    </tr>
    @if (Model.Count() < 1)
    {
        <tr>
            <td colspan="6">
                There is no user in database
            </td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Family</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Privacy" asp-controller="Home" asp-route-id="@user.Id" class="btn btn-info">Edit</a>
                </td>
            </tr>
        }
    }
</table>

