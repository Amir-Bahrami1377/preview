@model ChangePasswordDto
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "تغییر رمز عبور";
}

<div class="container">
    <div class="row justify-content-center align-items-center authentication authentication-basic h-100">
        <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-6 col-sm-8 col-12">
            <div class="card custom-card shadow-lg">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <p class="h3 fw-bold mb-2 text-primary">فرم ورود</p>
                        <a class="text-muted op-7 fw-normal" asp-area="" asp-controller="Login" asp-action="Index">نرم افزار شهرسازی آمارد</a>
                    </div>
                    <form asp-area="" asp-controller="login" asp-action="ChangePasswordSubmit" autocomplete="off" id="ChangePasswordForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="Message" value="@ViewBag.message" />
                        <input type="hidden" asp-for="UserName"/>

                        <div class="form-group mb-3">
                            <label class="form-label">رمز عبور جدید</label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" asp-for="NewPassword" placeholder="رمز عبور جدید خود را وارد کنید">
                                <button class="btn btn-sm btn-primary d-flex align-items-center" type="button" id="NewPasswordEyeBtn">
                                    <i class="ri-eye-off-line align-middle fs-14" id="NewPasswordEye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12">
                                <div class="progress custom-progress " role="progressbar" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">
                                    <div class="progress-bar" id="new-password-strength-bar"></div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">تکرار رمز عبور</label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" asp-for="RepeatPassword" placeholder="تکرار رمز عبور خود را وارد کنید">
                                <button class="btn btn-sm btn-primary d-flex align-items-center" type="button" id="RepeatPasswordEyeBtn">
                                    <i class="ri-eye-off-line align-middle fs-14" id="RepeatPasswordEye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold">تغییر رمز  عبور</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/zxcvbn/zxcvbn.js"></script>
}
