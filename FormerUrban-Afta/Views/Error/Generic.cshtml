@{
    Layout = "_ErrorLayout";
    var code = ViewBag.Code ?? "خطا";
}

<p class="error-text mb-sm-0 mb-2">@code</p>
<p class="fs-18 fw-semibold mb-3">
    @{
        switch (code?.ToString())
        {
            case "400":
                @:درخواست نامعتبر!
                break;
            case "401":
                @:شما وارد سیستم نشده‌اید!
                break;
            case "403":
                @:دسترسی به این صفحه غیرمجاز است!
                break;
            case "404":
                @:صفحه مورد نظر یافت نشد!
                break;
            case "429":
                @:تعداد درخواست‌های بیش از حد مجاز!
                break;
            case "500":
                @:خطای داخلی سرور!
                break;
            default:
                @:خطای غیرمنتظره رخ داده است.
                break;
        }
    }
</p>
<div class="row justify-content-center mb-5">
    <div class="col-xl-6">
        <p class="mb-0 op-7">
            @{
                switch (code?.ToString())
                {
                    case "400":
                        @:اطلاعات ارسال شده ناقص یا اشتباه است. لطفاً دوباره تلاش کنید. <br /> @(ViewBag.actionId != "" ? $"کد خطا : {ViewBag.actionId}" : "")
                        break;
                    case "401":
                        @:برای مشاهده این صفحه باید وارد سیستم شوید. <br /> @(ViewBag.actionId != "" ? $"کد خطا : {ViewBag.actionId}" : "")
                        break;
                    case "403":
                        @:سطح دسترسی شما برای این صفحه کافی نیست. <br /> @(ViewBag.actionId != "" ? $"کد خطا : {ViewBag.actionId}" : "")
                        break;
                    case "404":
                        @:لینک موردنظر اشتباه وارد شده یا صفحه حذف شده است. <br /> @(ViewBag.actionId != "" ? $"کد خطا : {ViewBag.actionId}" : "")
                        break;
                    case "429":
                        @:شما در مدت زمان کوتاه درخواست‌های زیادی ارسال کرده‌اید. <br /> @(ViewBag.actionId != "" ? $"کد خطا : {ViewBag.actionId}" : "")
                        break;
                    case "500":
                        @:مشکلی در سرور به وجود آمده است. لطفاً بعداً تلاش کنید. <br /> @(ViewBag.actionId != "" ? $"کد خطا : {ViewBag.actionId}" : "")
                        break;
                    default:
                        @:لطفاً بعداً دوباره تلاش کنید یا با پشتیبانی تماس بگیرید. <br /> @(ViewBag.actionId != "" ? $"کد خطا : {ViewBag.actionId}" : "")
                        break;
                }
            }
        </p>
    </div>
</div>
<a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">
    بازگشت به نرم‌افزار
    <i class="ri-arrow-left-line align-middle ms-1 d-inline-block"></i>
</a>

