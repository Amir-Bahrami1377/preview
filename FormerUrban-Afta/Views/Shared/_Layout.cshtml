<!DOCTYPE html>
<html lang="en" dir="rtl">
@{
    var @simonwep = "@simonwep";
    var @popperjs = "@popperjs";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csp-nonce" content="@Context.Items["CSP-Nonce"]">

    @{
        var tokens = Antiforgery.GetAndStoreTokens(Context);
    }

    <meta name="csrf-token" content="@tokens.RequestToken" />


    <title>نرم افزار شهرسازی آمارد</title>

    <link href="~/lib/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/Theme/assets/css/styles.min.css" rel="stylesheet">
    <link href="~/Theme/assets/css/icons.css" rel="stylesheet">
    <link href="~/lib/notyf/css/notyf.min.css" rel="stylesheet" />
    <script src="~/lib/zxcvbn/zxcvbn.js"></script>
</head>

<body>
    @await Component.InvokeAsync("Header")
    @await Html.PartialAsync("Menu/_RightMenu")
    
    <input type="hidden" id="ValidateMessage" value="@TempData["ValidateMessage"]" />
    <input type="hidden" id="SuccessMessage" value="@TempData["SuccessMessage"]" />
    <input type="hidden" id="ErrorMessage" value="@ViewBag.ErrorMessage" />

    <div class="page">
        <div class="main-content app-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>

        <!-- #region Modal -->
        <div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="Modal" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content" id="ModalContent">
                </div>
            </div>
        </div>
        <!-- #endregion -->

        <div class="scrollToTop pointer"> <span class="arrow"><i class="ri-arrow-up-s-fill fs-20"></i></span> </div>

        <footer class="footer mt-auto py-3 bg-white text-center">
            <div class="container">
                <a class="text-dark fw-semibold">تمامی حقوق این نرم افزار متعلق به شرکت تحلیلگران آمارد می باشد</a>
                <span class="text-muted"><span id="year"></span> © </span>
            </div>
        </footer>
        
        <div id="responsive-overlay"></div>

    </div>

    <script src="~/Theme/assets/libs/@popperjs/core/umd/popper.min.js"></script>
    <script src="~/Theme/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Theme/assets/js/defaultmenu.min.js"></script>
    <script src="~/lib/notyf/js/notyf.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/Validation/ValidationMessage.js"></script>
    <script src="~/js/Validation/ValidationService.js"></script>
    @await RenderSectionAsync("Scripts", false)

    </body>

</html>